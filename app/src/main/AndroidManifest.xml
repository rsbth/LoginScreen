<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jntuh.net.loginscreen" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".welcome_activity"
            android:label="@string/title_activity_welcome_activity"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jntuh.net.loginscreen.LoginActivity" />
        </activity>
        <activity
            android:name=".customizeActivity"
            android:label="@string/title_activity_customize" >
        </activity>
        <activity
            android:name=".RoomConfig"
            android:label="@string/title_activity_room_config" >
        </activity>
        <activity
            android:name=".welcomeScreen"
            android:label="@string/title_activity_welcome_screen" >
        </activity>
        <activity
            android:name=".monitoring"
            android:label="@string/title_activity_monitoring" >
        </activity>
    </application>

</manifest>
