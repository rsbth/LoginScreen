<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jntuh.net.loginscreen.welcome_activity"
    android:id="@+id/welcomeLayout"
    android:background="#ff2196f3">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeheader"
        android:textColor="#80ffffff"
        android:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize"
        android:id="@+id/welcomeButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff2196f3"
        android:background="#ffffffff" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Switch"
        android:id="@+id/switch1"
        android:layout_toEndOf="@+id/welcomeheader"
        android:layout_marginTop="84dp"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_below="@+id/welcomeheader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fan Switch"
        android:id="@+id/fanSwitch"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC Switch"
        android:id="@+id/switch2"
        android:layout_below="@+id/fanSwitch"
        android:layout_alignRight="@+id/fanSwitch"
        android:layout_alignEnd="@+id/fanSwitch"
        android:layout_marginTop="52dp"
        android:textColor="#ffffffff"
        android:textSize="25sp" />

</RelativeLayout>
